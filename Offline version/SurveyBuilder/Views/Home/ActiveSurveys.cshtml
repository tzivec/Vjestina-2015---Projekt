<fieldset>
    <legend>Active Surveys</legend>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Number of Questions</th>
                <th>Take Survey / Preview</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="survey in surveys">
                <td ng-bind="survey.Name"></td>
                <td ng-bind="survey.Description"></td>
                <td ng-bind="survey.Questions.length"></td>
                <td><a ng-href="/#/take-survey/{{survey.SurveyId}}">Preview</a></td>
            </tr>
        </tbody>
    </table>
</fieldset>
